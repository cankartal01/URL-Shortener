		{
			"name": "URL Management",
			"item": [
				{
					"name": "Shorten URL",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has short_url\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.short_url).to.exist;",
									"    pm.environment.set(\"url_id\", jsonData.url_id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"original_url\": \"https://www.google.com\",\n    \"custom_alias\": \"google\",\n    \"expires_at\": \"2024-12-31T23:59:59.000Z\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/urls/shorten",
							"host": [
